<Window x:Class="TreasureHuntDesktopApplication.FullClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Height="600"
        Width="900"
        Title="Treasure Hunt"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button Content="Create Hunt" Command="{Binding NavigateToCreateHuntViewCommand}"></Button>
            <Button Content="View Hunts" Command="{Binding NavigateToViewHuntsViewCommand}"></Button>
            <Button Content="Add Question" Command="{Binding NavigateToAddQuestionViewCommand}"></Button>
        </StackPanel>
        
            
        <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}"/>

    </Grid>
</Window>
